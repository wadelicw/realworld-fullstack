	| You need to enable javascript.

script(src="https://cdn.redoc.ly/redoc/latest/bundles/redoc.standalone.js")

script.
	Redoc.init(
		!{stringified},
		{
			//- scrollYOffset: 60,
			hideDownloadButton: true
		},
		document.getElementById("container")
	);
