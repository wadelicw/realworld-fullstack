{
	"env": {
		"browser": true,
		"commonjs": true,
		"es2021": true,
		"jest": true
	},
	"parser": "@babel/eslint-parser",
	"extends": [
		"airbnb-base", "next"
	],
	"parserOptions": {
		"ecmaVersion": 12
	},
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"quotes": [
			"error",
			"double"
		],
		"strict": 0,
		// Disallows trailing commas
		"comma-dangle": [
			"error",
			"never"
		],
		// Allow the use of tab characters
		"no-tabs": 0,
		"no-param-reassign": [
			"error",
			{
				"props": false
			}
		],
		"func-names": [
			"error",
			"never"
		],
		// Ignore the maximum length of string and template literals
		"max-len": [
			"error",
			{
				"code": 100,
				"ignoreStrings": true,
				"ignoreComments": true,
				"ignoreTemplateLiterals": true
			}
		]
	}
}